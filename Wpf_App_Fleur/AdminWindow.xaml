<Page
    x:Class="Wpf_App_Fleur.AdminWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf_App_Fleur"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AdminWindow"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    ShowsNavigationUI="False"
    mc:Ignorable="d">
    <Grid>
        <TabControl SelectionChanged="SelectionChanged" x:Name="tabControl">
            <TabItem Header="Accueil">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Clients">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="clientsDataGrid">
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Produits" Height="22" Margin="-2,-2,-2,0" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="produitsDataGrid">
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem Header="Etat des Stocks">
                <Grid Background="#FFE5E5E5">
                    <DataGridCell Margin="20,50,20,20" Background="DarkSlateGray" />
                </Grid>
            </TabItem>
            <TabItem Header="Commandes">
                <Grid Background="#FFE5E5E5">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Margin="0 5">
                            <RadioButton GroupName="ready" Margin="5 1" Checked="ShowCommandes">Commande standard à vérifier</RadioButton>
                            <RadioButton GroupName="ready" Margin="5 1" Checked="ShowCommandes">Commande personnalisée à vérifier</RadioButton>
                        </StackPanel>
                        <StackPanel Margin="0 5">
                            <RadioButton GroupName="ready" Margin="5 1" Checked="ShowCommandes">Commande complète</RadioButton>
                            <RadioButton GroupName="ready" Margin="5 1" Checked="ShowCommandes">Commande à livrer</RadioButton>
                        </StackPanel>
                        <StackPanel Margin="0 5">
                            <RadioButton GroupName="ready" Margin="5 1" Checked="ShowCommandes">Commande livrée</RadioButton>
                        </StackPanel>
                    </StackPanel>
                    <Grid Margin="0,40,0,0">
                        <DataGrid x:Name="commandesDataGrid"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Déconnection">
                <Button Content="Déconnection" />
            </TabItem>
        </TabControl>
